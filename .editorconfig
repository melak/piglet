# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 4
indent_style = space

[*.html]
indent_size = 2
indent_style = tab
quote_type = double

[*.shp]
end_of_line = crlf

[Makefile]
indent_size = 4
indent_style = tab
